@{
    ViewData["Title"] = "Accueil";
}

<div class="container mt-5">
    <h1 class="mb-4">Bienvenue sur votre tableau de bord sécurité</h1>

    <div class="row">
        <!-- Section 1 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Organisation</h5>
                    <p class="card-text">Testez vos apps pour détecter les dépendances vulnérables. Recevez des alertes en cas de nouvelles failles.</p>
                    <a href="/Organisation/Index" class="btn btn-primary">Organisation</a>
                </div>
            </div>
        </div>

        <!-- Section 2 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Communication</h5>
                    <p class="card-text"> Envoyez des messages de groupe par courriel ou texto, réalisez des sondages instantanés, et partagez des informations en temps réel.</p>
                    <a href="/Communication/Index" class="btn btn-success">Communication</a>
                </div>
            </div>
        </div>

        <!-- Section 3 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Finance</h5>
                    <p class="card-text">Installez notre outil CLI pour analyser les projets locaux. Utilisez <code>snyk monitor</code>.</p>
                    <a href="#" target="_blank" class="btn btn-outline-secondary">Finance</a>
                </div>
            </div>
        </div>
    </div>
</div>